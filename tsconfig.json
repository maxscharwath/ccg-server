{
  "extends": "./node_modules/gts/tsconfig-google.json",
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "build",
    "allowSyntheticDefaultImports": true,
    "noImplicitOverride": true,
    "suppressImplicitAnyIndexErrors": true,
    "strict": true,
    "declaration": false,
    "declarationMap": false,
    "sourceMap": false,
    "lib": [
      "es2020"
    ],
    "baseUrl": ".",
    "paths": {
      "@core/*": ["src/core/*"],
      "@data/*": ["src/data/*"],
      "@locales/*": ["locales/*"]
    }
  },
  "include": [
    "src/**/*.ts",
    "test/**/*.ts"
  ]
}
